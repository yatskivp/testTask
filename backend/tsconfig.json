{
  "ts-node": {
    "experimentalSpecifierResolution": "node"
  },
  "compilerOptions": {
    "target": "ES2021", // Specifies the target ECMAScript version
    "module": "nodenext", // Specifies the module code generation
    "outDir": "./dist", // Redirect output structure to the directory
    "rootDir": "./src", // Specify the root directory of input files
    "strict": true, // Enable all strict type-checking options
    "esModuleInterop": true, // Enables emit interoperability between CommonJS and ES Modules
    "skipLibCheck": true, // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true, // Ensure that casing of filenames is consistent,
    "noEmit": true, // Do not emit outputs
    "allowImportingTsExtensions": true // Allow importing modules with .ts extensions
  },
  "include": ["src/**/*.ts", "src/index.ts"], // Specify the files to be included in the compilation
  "exclude": ["node_modules", "**/*.spec.ts"] // Specify the files to be excluded from the compilation
}
